SUB BOX24( Z1$, NOCONV, A$ )

  CLEAR
  CALL BOXU(2,12,56,18)
  CALL LINEU(5,12,56)
  PRINT TAB(3,15);  "FORMAT OF FILE TO BE LOADED:    ALL VALUES MUST BE"
  PRINT TAB(4,15);  "ASCII-NUMERIC, ONE TO A LINE.  NULL LINES ACCEPTED"
  PRINT TAB(7,15);  "N  VALUES OF  XRE(K) ............................. A"
  PRINT TAB(9,15);  "N  VALUES OF  XRE(K)   AND  N  OF  X2RE(K) ....... B"
  PRINT TAB(11,15); "N  VALUES OF  XRE(K)   AND  N  OF  XIM(K) ........ C"
  PRINT TAB(13,15); "N  VALUES OF  XRE(K)   AND  N  OF  XIM(K)           "
  PRINT TAB(14,15); "N  VALUES OF  X2RE(K)  AND  N  OF  X2IM(K) ....... D"
  PRINT TAB(16,15); "N  VALUES OF  FRE(K)   AND  N  OF  FIM(K) ........ E"
  PRINT TAB(18,15); "N  VALUES OF  FRE(K)   AND  N  OF  FIM(K)           "
  PRINT TAB(19,15); "N  VALUES OF  F2RE(K)  AND  N  OF  F2IM(K) ....... F"

  IF NOCONV = 1 THEN
    PRINT TAB(9,66);  " "
    PRINT TAB(14,66); " "
    PRINT TAB(19,66); " "
  END IF
  DO
    LET FRAZ$ = "ณ SELECT OPTION ณ  ?  "

    CALL APROMPT( 23, 31, A$, FRAZ$, Z1$ )

    IF Z1$ <> "A" AND Z1$ <> "C" AND Z1$ <> "E" AND Z1$ <> "Q" AND (NOCONV = 1 OR (Z1$ <> "B" AND Z1$ <> "D" AND Z1$ <> "F")) THEN SOUND 500,.1
  LOOP UNTIL Z1$ = "A" OR Z1$ = "C" OR Z1$ = "E" OR Z1$ = "Q" OR (NOCONV = 0 AND (Z1$ = "B" OR Z1$ = "D" OR Z1$ = "F"))

END SUB !BOX24
