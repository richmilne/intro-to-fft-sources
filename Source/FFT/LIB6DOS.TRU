  CLEAR
  IF BOXNO = 1 THEN
    LET FRAZ1$ = "OK: THE SELECTED ITEMS HAVE BEEN SENT TO DISK FILE"
  ELSE IF BOXNO = 2 THEN
    LET FRAZ1$ = "OK: YOUR PRINT FILE HAS BEEN SENT TO"
  ELSE IF BOXNO = 3 THEN
    LET FRAZ1$ = "OK: WE HAVE LOADED THE FOLLOWING FILE"
  END IF

  LET FRAZ2$ = "----->  " & FILENAME$ & "  <-----"
  LET COUNT1 = LEN(FRAZ1$)
  LET COUNT2 = LEN(FRAZ2$)
  LET COUNTB = MAX(COUNT1,COUNT2) + 4
  LET STARTB = 39 - ROUND(COUNTB/2)
  CALL BOXU( 4, STARTB, COUNTB, 5 )
  LET START1 = 40 - ROUND(COUNT1/2)
  LET START2 = 40 - ROUND(COUNT2/2)
  PRINT TAB(6,START1);FRAZ1$
  PRINT TAB(8,START2);FRAZ2$

  CALL BOX48MFIX( 12, 30, A$ )

END SUB !BOX126
