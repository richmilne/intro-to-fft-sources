SUB BOX137( FDT$, CZE$, SDT$, A$ )

  CLEAR
  IF FDT$ = "A" OR FDT$ = "C" OR FDT$ = "E" THEN
    LET HYT = 6
  ELSE IF FDT$ = "B" OR FDT$ = "D" THEN
    LET HYT = 9
  ELSE IF FDT$ = "F" THEN
    LET HYT = 12
  ELSE IF FDT$ = "G" THEN
    LET HYT = 18
    LET DELT = -2
  END IF

  CALL BOXU(4+DELT,13,51,HYT)
  CALL LINEU(6+DELT,13,51)

  PRINT TAB(5+DELT,16); "THE FORMAT OF YOUR DATA FILE WILL BE AS FOLLOWS"

  IF FDT$ = "A" OR FDT$ = "B" OR FDT$ = "F" OR FDT$ = "G" THEN
    PRINT TAB(8+DELT,29); "N  NUMBERS FOR  XRE"
    PRINT TAB(9+DELT,29); "N  NUMBERS FOR  XIM"
    LET COUNT = 3
  END IF

  IF FDT$ = "B" OR FDT$ = "G" THEN
    PRINT TAB(8+DELT+COUNT,29); "N  NUMBERS FOR  X2RE"
    PRINT TAB(9+DELT+COUNT,29); "N  NUMBERS FOR  X2IM"
    LET COUNT = COUNT + 3
  END IF

  IF FDT$ = "C" OR FDT$ = "D" OR FDT$ = "F" OR FDT$ = "G" THEN
    IF CZE$ = "C" OR CZE$ = "S" OR CZE$ = "DD" THEN
      PRINT TAB(8+DELT+COUNT,29); "N  NUMBERS FOR  FRE"
      PRINT TAB(9+DELT+COUNT,29); "N  NUMBERS FOR  FIM"

    ELSE IF CZE$ = "R" THEN
      PRINT TAB(8+DELT+COUNT,29); "N/2  NUMBERS FOR  a(n)"
      PRINT TAB(9+DELT+COUNT,29); "N/2  NUMBERS FOR  b(n)"

    ELSE IF CZE$ = "I" THEN
      PRINT TAB(8+DELT+COUNT,22); "N  NUMBERS FOR THE WEIGHTS IN  FRE"
      PRINT TAB(9+DELT+COUNT,22); "N  NUMBERS FOR THE WEIGHTS IN  FIM"
    END IF
    LET COUNT = COUNT + 3
  END IF

  IF FDT$ = "D" OR FDT$ = "G" THEN
    IF CZE$ = "C" OR CZE$ = "S" OR CZE$ = "DD" THEN
      PRINT TAB(8+DELT+COUNT,29); "N  NUMBERS FOR  F2RE"
      PRINT TAB(9+DELT+COUNT,29); "N  NUMBERS FOR  F2IM"

    ELSE IF CZE$ = "R" THEN
      PRINT TAB(8+DELT+COUNT,29); "N/2  NUMBERS FOR  a2(n)"
      PRINT TAB(9+DELT+COUNT,29); "N/2  NUMBERS FOR  b2(n)"

    ELSE IF CZE$ = "I" THEN
      PRINT TAB(8+DELT+COUNT,22); "N  NUMBERS FOR THE WEIGHTS IN  F2RE"
      PRINT TAB(9+DELT+COUNT,22); "N  NUMBERS FOR THE WEIGHTS IN  F2IM"
    END IF
    LET COUNT = COUNT + 3
  END IF

  IF FDT$ = "E" OR FDT$ = "F" OR FDT$ = "G" THEN
    PRINT TAB(8+DELT+COUNT,29); "N  NUMBERS FOR  YRE"
    PRINT TAB(9+DELT+COUNT,29); "N  NUMBERS FOR  YIM"
    LET COUNT = COUNT + 3
  END IF

  LET FRAZ$ = "ณ CONTINUE ... C ณ  ?  "

  LET WXQ = 0
  DO
    IF WXQ = 1 THEN SOUND 500,.1

    CALL APROMPT( 10+DELT+COUNT, 30, A$, FRAZ$, SDT$ )

    IF SDT$ = "C" OR SDT$ = "Q" THEN LET SQK = 1
    LET WXQ = 1
  LOOP UNTIL SQK = 1

END SUB !BOX137
