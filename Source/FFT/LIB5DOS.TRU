EXTERNAL             !LIB5DOS!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX25( PNUM, QNUM, N, ZT$, CONCORFLAG )  CALL MACSYSBEEP(1)  IF CONCORFLAG = 1 THEN    LET PFRAZZ$ = "CONVOLUTION"  ELSE IF CONCORFLAG = 0 THEN    LET PFRAZZ$ = "CORRELATION"  END IF  LET MESSAGE$ = "YOU ARE PERFORMING CIRCULAR " & PFRAZZ$  LET MESSAGE$ = MESSAGE$ & "|" &  "ON TWO PULSES WHOSE SPANS ARE"  LET MESSAGE$ = MESSAGE$ & "|" & "p = " & STR$(PNUM) & "  AND  q = " & STR$(QNUM)  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "THUS  p + q = " & STR$(PNUM + QNUM) & " WHICH EXCEEDS  N+1 = " & STR$(N+1)  LET MESSAGE$ = MESSAGE$ & "|" & "AND SO THEY VIOLATE THE SPAN RESTRICTION"  LET MESSAGE$ = MESSAGE$ & "|" & "(REFER TO CHAPTER 14 IN THE TEXT)"  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "THEREFORE THEIR " & PFRAZZ$ & " PRODUCT WILL BE ALIASED"  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "RUN " & PFRAZZ$ & " REGARDLESS OR QUIT ? "  LET ICON = 3  LET BUTTON$ = "GO|QUIT"  LET DEFAULT = 0  CALL TW_DWARN( ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT )  IF RESULT = 1 THEN    LET ZT$ = "Y"  ELSE IF RESULT = 2 THEN    LET ZT$ = "Q"  END IFEND SUB !BOX25!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX30( Z2$ )  BOX CLEAR 0, 81, 29, 31  DIM menu$(0:1,0:6)               !dimensioning for two menus, APPLE AND CREATE  LET MENU$(0,1) = "Info Page..."  LET MENU$(1,0) = "EDIT MENU"  LET MENU$(1,1) = "Create X vectors @A"  LET MENU$(1,2) = "Change X vectors @B"  LET MENU$(1,3) = "Create F vectors @C"  LET MENU$(1,4) = "Change F vectors @D"  LET MENU$(1,5) = "@"  LET MENU$(1,6) = "Quit"  CALL TW_menu_set(menu$)       !remove current menus, install new ones  DO    LET CYCLEFLAG = 0    DO                                        ! Here's our event loop      CALL tw_event(0,type1$,window1,x1,x2)      SELECT CASE type1$      CASE "MENU"        !        ! Note what was selected        !        LET mitem$ = menu$(x1,x2)        LET p = Pos(mitem$,"@")        IF p > 0 then LET mitem$[p:maxnum] = ""   ! strip shortcuts        LET mtitle$ = menu$(x1,0)        IF X1 = 0 AND X2 = 1 THEN          CALL TW_MENU_CLEAR          CALL BOX138          CALL TW_menu_set(menu$)          LET CYCLEFLAG = 1          EXIT DO        ELSE IF X1 = 1 THEN          IF  X2 = 1 THEN            LET Z2$ = "A"          ELSE IF X2 = 2 THEN            LET Z2$ = "B"          ELSE IF X2 = 3 THEN            LET Z2$ = "C"          ELSE IF X2 = 4 THEN            LET Z2$ = "D"          ELSE IF X2 = 6 THEN            LET Z2$ = "Q"          END IF          EXIT DO        END IF      CASE "SINGLE"        CALL MACSYSBEEP(1)      CASE "DOUBLE"        CALL MACSYSBEEP(1)      CASE ELSE          !          ! Ignore other events          !      END SELECT    LOOP  LOOP WHILE CYCLEFLAG = 1  CALL TW_MENU_CLEAREND SUB !BOX30!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX31( N, VAR$, Z1$ )  LET MESSAGE$ = "N = " & STR$(N)  IF VAR$ = "X" THEN    LET MESSAGE$ = MESSAGE$ & "|" & "|" & "CREATE ONLY THE  X  VECTOR"    LET MESSAGE$ = MESSAGE$ & "|" & "  OR CREATE BOTH  X  AND  X2 ?"  ELSE IF VAR$ = "FFT" THEN    LET MESSAGE$ = MESSAGE$ & "|" & "|" & "CREATE ONLY THE  F  VECTOR"    LET MESSAGE$ = MESSAGE$ & "|" & "  OR CREATE BOTH  F  AND  F2 ?"  END IF  LET ICON = 2  IF VAR$ = "X" THEN    LET BUTTON$ = "ONLY X|X & X2|QUIT"  ELSE IF VAR$ = "FFT" THEN    LET BUTTON$ = "ONLY F|F & F2|QUIT"  END IF  CALL TW_DWARN( ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT )  IF RESULT = 1 THEN    IF VAR$ = "X" THEN      LET Z1$ = "X"    ELSE IF VAR$ = "FFT" THEN      LET Z1$ = "F"    END IF  ELSE IF RESULT = 2 THEN    LET Z1$ = "B"  ELSE IF RESULT = 3 THEN    LET Z1$ = "Q"  END IFEND SUB !BOX31!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX28( VAR$, N, Z4$, NUMBERR )  BOX CLEAR 0, 81, 29, 31  IF VAR$ = "X" THEN    IF NUMBERR = 1 THEN      LET FRAZ$ = "X  VECTOR"    ELSE IF NUMBERR = 2 THEN      LET FRAZ$ = "X2  VECTOR"    END IF  ELSE IF VAR$ = "FFT" THEN    IF NUMBERR = 1 THEN      LET FRAZ$ = "F  VECTOR"    ELSE IF NUMBERR = 2 THEN      LET FRAZ$ = "F2  VECTOR"    END IF  END IF  LET MESSAGE$ = "YOU ARE NOW CREATING VALUES"  LET MESSAGE$ = MESSAGE$ & "|" & "  FOR THE  " & FRAZ$  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "ALL ELEMENTS ARE CURRENTLY ZERO"  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "YOU CAN CREATE UP TO " & STR$(N) & " COMPLEX ELEMENTS"  LET MESSAGE$ = MESSAGE$ & "|" & "(YOU WILL BE ABLE TO TERMINATE WHENEVER YOU LIKE)"  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "THE VALUES ARE..."  LET ICON = 2  LET BUTTON$ = "REAL|COMPLEX|QUIT"  CALL TW_DWARN( ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT )  IF RESULT = 1 THEN    LET Z4$ = "R"  ELSE IF RESULT = 2 THEN    LET Z4$ = "C"  ELSE IF RESULT = 3 THEN    LET Z4$ = "Q"  END IFEND SUB !BOX28!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX29(TOT1, TOT2, N, Z3$, NUMBERR, SUB)  LET M = N  IF Z4$ = "C" THEN    LET M = 2*N  END IF  IF NUMBERR = 1 THEN    LET VALL = TOT1  ELSE IF NUMBERR = 2 THEN    LET VALL = TOT2  END IF  IF SUB = 1 THEN    LET MESSAGE$ = "O K : YOU HAVE CREATED " & STR$( VALL ) & " VALUES"  ELSE IF SUB = 2 THEN    LET MESSAGE$ = "O K : YOU HAVE CHANGED " & STR$( VALL ) & " VALUES"  END IF  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "TO INSPECT THEM, TAKE"  LET MESSAGE$ = MESSAGE$ & "|" & "OPTION  H  OR  I  ON THE MAIN MENU"  LET ICON = 2  LET BUTTON$ = "CONTINUE|QUIT"  LET DEFAULT = 1  CALL TW_DWARN( ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT )  IF RESULT = 1 THEN    LET Z3$ = "C"  ELSE IF RESULT = 2 THEN    LET Z3$ = "Q"  END IFEND SUB !BOX29!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX60( HJWFLAG, SUB, VAR$ )  BOX CLEAR 0, 61, 29, 31  IF SUB = 1 AND VAR$ = "X" THEN    LET MESSAGE$ = "ALL VALUES THAT YOU CREATED HAVE BEEN LOADED"    IF HJWFLAG = 0 THEN      LET MESSAGE$ = MESSAGE$ & "|" & "|" & "F, F2 AND Y HAVE BEEN SET TO ZERO"    ELSE IF HJWFLAG = 1 THEN      LET MESSAGE$ = MESSAGE$ & "|" & "|" & "F AND Y HAVE BEEN SET TO ZERO"    END IF  ELSE IF SUB = 1 AND VAR$ = "FFT" THEN    LET MESSAGE$ = "ALL VALUES THAT YOU CREATED HAVE BEEN LOADED"    LET MESSAGE$ = MESSAGE$ & "|" & "|" & "X, X2 AND Y HAVE BEEN SET TO ZERO"  ELSE IF SUB = 2 AND VAR$ = "X" THEN    LET MESSAGE$ = "ALL VALUES THAT YOU CHANGED HAVE BEEN LOADED"    IF HJWFLAG = 0 THEN      LET MESSAGE$ = MESSAGE$ & "|" & "|" & "F, F2 AND Y HAVE BEEN SET TO ZERO"    ELSE IF HJWFLAG = 1 THEN      LET MESSAGE$ = MESSAGE$ & "|" & "|" & "F AND Y HAVE BEEN SET TO ZERO"    END IF  ELSE IF SUB = 2 AND VAR$ = "FFT" THEN    LET MESSAGE$ = "ALL VALUES THAT YOU CHANGED HAVE BEEN LOADED"    LET MESSAGE$ = MESSAGE$ & "|" & "|" & "Y HAS BEEN SET TO ZERO"  END IF  IF HJWFLAG = 1 THEN    LET MESSAGE$ = MESSAGE$ & "|" & "|" & "F2 HAS NOT BEEN ALTERED"  END IF  LET ICON = 2  LET BUTTON$ = "GO"  LET DEFAULT = 1  CALL TW_DWARN( ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT )END SUB !BOX60!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX32( N, VAR$, Z1$ )  LET MESSAGE$ = "N = " & STR$(N)  IF VAR$ = "X" THEN    LET MESSAGE$ = MESSAGE$ & "|" & "|" & "CHANGE THE  X    VECTOR .... X"    LET MESSAGE$ = MESSAGE$ & "|" &       "CHANGE THE  X2  VECTOR .... X2"    LET MESSAGE$ = MESSAGE$ & "|" &       "CHANGE BOTH  X  AND  X2 ... BOTH"    LET BUTTON$ = "X|X2|BOTH|QUIT"  ELSE IF VAR$ = "FFT" THEN    LET MESSAGE$ = MESSAGE$ & "|" & "|" & "CHANGE THE  F    VECTOR .... F"    LET MESSAGE$ = MESSAGE$ & "|" &       "CHANGE THE  F2  VECTOR .... F2"    LET MESSAGE$ = MESSAGE$ & "|" &       "CHANGE BOTH  F  AND  F2 ... BOTH"    LET BUTTON$ = "F|F2|BOTH|QUIT"  END IF  LET ICON = 2  CALL TW_DWARN(ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT)  IF VAR$ = "X" THEN    IF RESULT = 1 THEN      LET Z1$ = "X"    ELSE IF RESULT = 2 THEN      LET Z1$ = "X2"    ELSE IF RESULT = 3 THEN      LET Z1$ = "B"    ELSE IF RESULT = 4 THEN      LET Z1$ = "Q"    END IF  ELSE IF VAR$ = "FFT" THEN    IF RESULT = 1 THEN      LET Z1$ = "F"    ELSE IF RESULT = 2 THEN      LET Z1$ = "F2"    ELSE IF RESULT = 3 THEN      LET Z1$ = "B"    ELSE IF RESULT = 4 THEN      LET Z1$ = "Q"    END IF  END IFEND SUB !BOX32!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX33( VAR$ )  CALL MACSYSBEEP(1)  LET MESSAGE$ = "ALL ELEMENTS OF BOTH THE"  IF VAR$ = "X" THEN    LET MESSAGE$ = MESSAGE$ & "|" &  "X  AND  X2  VECTORS ARE ZERO"  ELSE IF VAR$ = "FFT" THEN    LET MESSAGE$ = MESSAGE$ & "|" & "F  AND  F2  VECTORS ARE ZERO"  END IF  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "TAKE MAIN-MENU  A  OR  C  TO CREATE VALUES"  LET MESSAGE$ = MESSAGE$ & "|" & "  OR TAKE OPTION  B  TO LOAD A DISK FILE"  LET ICON = 3  LET BUTTON$ = "GO"  LET DEFAULT = 1  CALL TW_DWARN( ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT )END SUB !BOX33!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX34( N, VAR$, Z2$, VEX )  LET MESSAGE$ = "N = " & STR$(N)  IF VEX = 1 THEN    IF VAR$ = "X" THEN      LET MESSAGE$ = MESSAGE$ & "|" & "|" & "CHANGE THE  X  VECTOR"    ELSE IF VAR$ = "FFT" THEN      LET MESSAGE$ = MESSAGE$ & "|" & "|" & "CHANGE THE  F  VECTOR"    END IF  ELSE IF VEX = 2 THEN    IF VAR$ = "X" THEN      LET MESSAGE$ = MESSAGE$ & "|" & "CHANGE THE  X2  VECTOR"    ELSE IF VAR$ = "FFT" THEN      LET MESSAGE$ = MESSAGE$ & "|" & "CHANGE THE  F2  VECTOR"    END IF  END IF  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "CHANGE REAL PART ...... REAL"  LET MESSAGE$ = MESSAGE$ & "|" &       "CHANGE IMAG PART ..... IMAG"  LET MESSAGE$ = MESSAGE$ & "|" &       "CHANGE BOTH PARTS .... BOTH"  LET MESSAGE$ = MESSAGE$ & "|" &       "SKIP AND CONTINUE .... SKIP"  LET ICON = 2  LET BUTTON$ = "REAL|IMAG|BOTH|SKIP|QUIT"  CALL TW_DWARN(ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT)  IF RESULT = 1 THEN    LET Z2$ = "R"  ELSE IF RESULT = 2 THEN    LET Z2$ = "I"  ELSE IF RESULT = 3 THEN    LET Z2$ = "B"  ELSE IF RESULT = 4 THEN    LET Z2$ = "C"  ELSE IF RESULT = 5 THEN    LET Z2$ = "Q"  END IFEND SUB !BOX34!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX35( N, NEWK, VEX, Z3$, Z2$, VAR$ )  !USE OR SPECIFY K  LET MESSAGE$ = "N = " & STR$(N)  LET STRE$ = "YOU ARE CHANGING "  IF VEX = 1 THEN    LET V1RE$ = "XRE(k)"    LET V1IM$ = "XIM(k)"    LET V2RE$ = "FRE(k)"    LET V2IM$ = "FIM(k)"  ELSE IF VEX = 2 THEN    LET V1RE$ = "X2RE(k)"    LET V1IM$ = "X2IM(k)"    LET V2RE$ = "F2RE(k)"    LET V2IM$ = "F2IM(k)"  END IF  IF Z2$ = "R" THEN    IF VAR$ = "X" THEN      LET FRAZ2$ = STRE$ & V1RE$    ELSE IF VAR$ = "FFT" THEN      LET FRAZ2$ = STRE$ & V2RE$    END IF  ELSE IF Z2$ = "I" THEN    IF VAR$ = "X" THEN      LET FRAZ2$ = STRE$ & V1IM$    ELSE IF VAR$ = "FFT" THEN      LET FRAZ2$ = STRE$ & V2IM$    END IF  ELSE IF Z2$ = "B" THEN    IF VAR$ = "X" THEN      LET FRAZ2$ = STRE$ & "BOTH " & V1RE$ & " AND " & V1IM$    ELSE IF VAR$ = "FFT" THEN      LET FRAZ2$ = STRE$ & "BOTH " & V2RE$ & " AND " & V2IM$    END IF  END IF  LET MESSAGE$ = MESSAGE$ & "|" & "|" & FRAZ2$  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "THE CURRENT VALUE OF  k  IS  " & STR$(NEWK)  LET MESSAGE$ = MESSAGE$ & "|" & "  USE  k  AS IS ............... USE"  LET MESSAGE$ = MESSAGE$ & "|" & "  SPECIFY  k  ................. SPEC"  LET MESSAGE$ = MESSAGE$ & "|" & "  SKIP AND CONTINUE .... SKIP"  LET ICON = 2  LET BUTTON$ = "USE|SPEC|SKIP|QUIT"  CALL TW_DWARN(ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT)  IF RESULT = 1 THEN    LET Z3$ = "U"  ELSE IF RESULT = 2 THEN    LET Z3$ = "S"  ELSE IF RESULT = 3 THEN    LET Z3$ = "C"  ELSE IF RESULT = 4 THEN    LET Z3$ = "Q"  END IFEND SUB !BOX35!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX117( NEWK, GOBACK )  LET MESSAGE$ = "WHAT IS THE REQUIRED VALUE OF  k ?"  LET MESSAGE$ = MESSAGE$ & "|" & "(AN INTEGER)"  DO    CALL INPUTVALL( MESSAGE$, FDG, SHOWFLAG, FLAG )    IF FLAG = 1 THEN      LET GOBACK = 1    ELSE IF FLAG = 0 THEN      LET GOBACK = 0      LET NEWK = FDG      IF NEWK <> INT(NEWK) THEN CALL MACSYSBEEP(1)    END IF  LOOP UNTIL FLAG = 1 OR NEWK = INT(NEWK)END SUB !BOX117!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX38( Z1$ )  DIM menu$(0:1,0:7)               !dimensioning for two menus, APPLE AND H(jw)  LET MENU$(0,1) = "Info Page..."  LET MENU$(1,0) = "H(jw) MENU"  LET MENU$(1,1) = "Create    @A"  LET MENU$(1,2) = "Change    @B"  LET MENU$(1,3) = "Display   @C"  LET MENU$(1,4) = "Load      @D"  LET MENU$(1,5) = "Main Menu @M"  LET MENU$(1,6) = "@"  LET MENU$(1,7) = "Quit      @Q"  CALL TW_menu_set(menu$)       !remove current menus, install new ones  DO    LET CYCLEFLAG = 0    DO                                        ! Here's our event loop      CALL tw_event(0,type1$,window1,x1,x2)      SELECT CASE type1$      CASE "MENU"        !        ! Note what was selected        !        LET mitem$ = menu$(x1,x2)        LET p = Pos(mitem$,"@")        IF p > 0 then LET mitem$[p:maxnum] = ""   ! strip shortcuts        LET mtitle$ = menu$(x1,0)        IF X1 = 0 AND X2 = 1 THEN          CALL TW_MENU_CLEAR          CALL BOX138          CALL TW_menu_set(menu$)          LET CYCLEFLAG = 1          EXIT DO        ELSE IF X1 = 1 THEN          IF  X2 = 1 THEN            LET Z1$ = "A"          ELSE IF X2 = 2 THEN            LET Z1$ = "B"          ELSE IF X2 = 3 THEN            LET Z1$ = "C"          ELSE IF X2 = 4 THEN            LET Z1$ = "D"          ELSE IF X2 = 5 THEN            LET Z1$ = "M"          ELSE IF X2 = 7 THEN            LET Z1$ = "Q"          END IF          EXIT DO        END IF      CASE "SINGLE"        CALL MACSYSBEEP(1)      CASE "DOUBLE"        CALL MACSYSBEEP(1)      CASE ELSE          !          ! Ignore other events          !      END SELECT    LOOP  LOOP WHILE CYCLEFLAG = 1  CALL TW_MENU_CLEAREND SUB !BOX38!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX59( CRT$ )  CALL MACSYSBEEP(1)  LET ICON = 3  LET MESSAGE$ = "YOU HAVE LOADED A SPECTRUM INTO  F2"  LET MESSAGE$ = MESSAGE$ & "|" & "   WHICH IS NOW LOCKED..."  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "IF YOU PROCEED FURTHER IT WILL BE ALTERED"  LET MESSAGE$ = MESSAGE$ & "|" & "    AND  F2  UNLOCKED"  LET BUTTON$ = "GO|QUIT"  LET DEFAULT = 1  CALL TW_DWARN( ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT  )  IF RESULT = 1 THEN    LET CRT$ = "P"  ELSE IF RESULT = 2 THEN    LET CRT$ = "Q"  END IFEND SUB !BOX59!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB  BOXCOEFFS( CTOP(), CBOT(), ASD$ )  CLEAR  LET ICON = 2  LET MESSAGE$ = "COEFF OF               NUMERATOR              DENOMINATOR"  LET MESSAGE$ = MESSAGE$ & "|"  FOR I = 0 TO MAX(CTOP(-1),CBOT(-1))    LET I$ = STR$(I)    LET MESSAGE$ = MESSAGE$ & "|" & " (jw)^" & I$    IF I <= CTOP(-1) THEN      LET STR1$ = "A(" & I$ & ") = " & STR$(CTOP(I))      LET SXY$ = STR$(CTOP(I))      LET COUNT = LEN(SXY$) - 1      LET NUMSP = 21 - 2*COUNT + SGN(COUNT)    ELSE      LET STR1$ = "-------"      LET NUMSP = 21    END IF    LET MESSAGE$ = MESSAGE$ & "                    " & STR1$    LET SPACE$ = ""    FOR K = 1 TO NUMSP      LET SPACE$ = SPACE$ & " "    NEXT K    IF I <= CBOT(-1) THEN      LET STR2$ = "B(" & I$ & ") = " & STR$(CBOT(I))    ELSE      LET STR2$ = "-------"    END IF    LET MESSAGE$ = MESSAGE$ & SPACE$ & STR2$  NEXT I  LET BUTTON$ = "CHANGE|LOAD|QUIT"  CALL TW_DWARN(ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT )  IF RESULT = 1 THEN    LET ASD$ = "C"  ELSE IF RESULT = 2 THEN    LET ASD$ = "L"  ELSE IF RESULT = 3 THEN    LET ASD$ = "Q"  END IFEND SUB !BOXCOEFFS!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX111  LET ICON = 3  LET MESSAGE$ = "H(jw)  HAS NOT YET BEEN CREATED..."  LET MESSAGE$ = MESSAGE$ & "|" & "   PLEASE CREATE IT"  LET BUTTON$ = "GO"  LET DEFAULT = 1  CALL TW_DWARN( ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT )END SUB !BOX111!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX112( RVO$ )  LET ICON = 3  LET MESSAGE$ = "YOU HAVE NOT YET LOADED  H(jw)  INTO  F2"  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "TO DO SO YOU MUST RETURN TO THE  H(jw) MENU"  LET BUTTON$ = "HjwMENU|MainMENU|Quit"  CALL TW_DWARN( ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT )  IF RESULT = 1 OR RESULT = 3 THEN    LET RVO$ = "H"  ELSE IF RESULT = 2 THEN    LET RVO$ = "M"  END IF  CLEAREND SUB !BOX112!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX113( DUMMY1$ )  LET MESSAGE$ = "CHANGE NUMERATOR ... N"  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "CHANGE DENOMINATOR ... D"  LET ICON = 2  LET BUTTON$ = "N|D|QUIT"  CALL TW_DWARN( ICON, MESSAGE$, BUTTON$, DEFULT, RESULT )  IF RESULT = 1 THEN    LET DUMMY1$ = "N"  ELSE IF RESULT = 2 THEN    LET DUMMY1$ = "D"  ELSE IF RESULT = 3 THEN    LET DUMMY1$ = "Q"  END IFEND SUB !BOX113!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB CTOPP( STRA$, CTOP(), I, DUMMY2$ )  LET ICON = 2  LET MESSAGE$ = "NUMERATOR COEFF: " & STRA$ & " = " & STR$(CTOP(I))  LET MESSAGE$ = MESSAGE$ & "||" & "CHANGE " & STRA$ & " ... C"  LET MESSAGE$ = MESSAGE$ & "||" & "GO TO NEXT COEFF ... G"  LET MESSAGE$ = MESSAGE$ & "||" & "SWITCH TO DENOMINATOR ... S"  LET BUTTON$ = "C|G|S|QUIT"  CALL TW_DWARN(ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT)  IF RESULT = 1 THEN    LET DUMMY2$ = "C"  ELSE IF RESULT = 2 THEN    LET DUMMY2$ = "G"  ELSE IF RESULT = 3 THEN    LET DUMMY2$ = "S"  ELSE IF RESULT = 4 THEN    LET DUMMY2$ = "Q"  END IFEND SUB !CTOPP!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB CBOTT( STRB$, CBOT(), I, DUMMY2$ )  LET ICON = 2  LET MESSAGE$ = "DENOMINATOR COEFF: " & STRB$ & " = " & STR$(CBOT(I))  LET MESSAGE$ = MESSAGE$ & "||" & "CHANGE " & STRB$ & " ... C"  LET MESSAGE$ = MESSAGE$ & "||" & "GO TO NEXT COEFF ... G"  LET MESSAGE$ = MESSAGE$ & "||" & "SWITCH TO NUMERATOR ... S"  LET BUTTON$ = "C|G|S|QUIT"  CALL TW_DWARN(ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT)  IF RESULT = 1 THEN    LET DUMMY2$ = "C"  ELSE IF RESULT = 2 THEN    LET DUMMY2$ = "G"  ELSE IF RESULT = 3 THEN    LET DUMMY2$ = "S"  ELSE IF RESULT = 4 THEN    LET DUMMY2$ = "Q"  END IFEND SUB !CBOTT!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX114B  CALL MACSYSBEEP(1)  LET MESSAGE$ = "THAT WILL LEAD TO A DIVISION BY ZERO"  LET MESSAGE$ = MESSAGE$ & "|" & "   AND YOU WON'T LIKE THAT!"  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "ENTER A NONZERO VALUE PLEASE."  LET ICON = 3  LET BUTTON$ = "GO"  LET DEFAULT = 1  CALL TW_DWARN( ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT )END SUB !BOX114B!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX114C(CBOT())  CALL MACSYSBEEP(1)  LET MESSAGE$ = "YOU SAID YOU WERE ENTERING"  LET MESSAGE$ = MESSAGE$ & " A POLYNOMIAL OF DEGREE " & STR$(CBOT(-1))  LET MESSAGE$ = MESSAGE$ & "|" & "   SO THAT VALUE CAN'T BE ZERO!"  LET MESSAGE$ = MESSAGE$ & "||" & "ENTER A NONZERO VALUE PLEASE."  LET ICON = 3  LET BUTTON$ = "GO"  LET DEFAULT = 1  CALL TW_DWARN( ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT )END SUB !BOX114C!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX115( BACKOUT, A )  LET MESSAGE$ = "WE ARE NOW LOADING  H(jw)  INTO  F2"  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "WHAT ALIASING LEVEL (ALPHA) DO YOU WANT ?"  LET MESSAGE$ = MESSAGE$ & "|" & "   (AN INTEGER >= 0)"  LET MESSAGE$ = MESSAGE$ & "|" & "|" & "(REFER TO CHAPTER 12 IN THE TEXT)"  DO    CALL INPUTVALL( MESSAGE$, FDG, SHOWFLAG, FLAG )    IF FLAG = 1 THEN      LET BACKOUT = 1    ELSE IF FLAG = 0 THEN      LET A = FDG      IF A <> INT(A) OR A < 0 THEN CALL MACSYSBEEP(1)    END IF  LOOP UNTIL FLAG = 1 OR (A = INT(A) AND A >= 0)END SUB !BOX115!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB BOX116( WCT$ )  LET MESSAGE$ = "RESUME ... R   :  NEW ALPHA ... N"  LET ICON = 2  LET BUTTON$ = "R|N|QUIT"  CALL TW_DWARN( ICON, MESSAGE$, BUTTON$, DEFAULT, RESULT )  IF RESULT = 1 THEN    LET WCT$ = "R"  ELSE IF RESULT = 2 THEN    LET WCT$ = "N"  ELSE IF RESULT = 3 THEN    LET WCT$ = "Q"  END IFEND SUB !BOX116!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!