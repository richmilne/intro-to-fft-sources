EXTERNAL             !LIB3CFFT!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! SUB PLOT( CONCORFLAG, N, NU, XRE(), XIM(), X2RE(), X2IM(), FFTRE(), FFTIM(), FFT2RE(), FFT2IM(), IFFTRE(), IFFTIM(), TEMPRE(), TEMPIM(), TEMP2RE(), TEMP2IM(), CARD$, COLOR$, AXIS$, XFLAG, X2FLAG, REALFLAGX, FFTFLAG, FFT2FLAG, SYMMFLAG, IFFTFLAG, REALFLAGIFFT, CONVFLAG, T, TYPE$, MODE$, KLEEN$, FIRSTTIME, CENT, TAXIS, FAXIS, PULSESCALE, ORG$, ORG2$, FREEMEM, HJWFLAG, FILESTR$, CENTFREQ )  IF ORG$  <> "L" AND ORG$  <> "C" THEN LET ORG$  = "C"  IF ORG2$ <> "L" AND ORG2$ <> "C" THEN LET ORG2$ = "C"  IF ORG$ = "C" THEN    LET CENT1 = 1  ELSE IF ORG$ = "L" THEN    LET CENT1 = 0  END IF  IF ORG2$ = "C" THEN    LET CENT2 = 1  ELSE IF ORG2$ = "L" THEN    LET CENT2 = 0  END IF  WHEN ERROR IN    LET PULSESCALE = 1    LET ZAZ = 1    CALL PAINTSTATUS(CONCORFLAG, CENTFREQ, N, MODE$, TYPE$, T, XFLAG, X2FLAG, REALFLAGX, FFTFLAG, FFT2FLAG, SYMMFLAG, IFFTFLAG, REALFLAGIFFT, CONVFLAG, KLEEN$, FREEMEM, HJWFLAG, TAXIS, FAXIS, FILESTR$ )    DO      LET LOOPUP2 = 0      DO                                     !CREATE THE MENU BARS        CALL BOX17( OPTION$, MODE$, TYPE$, XFLAG, X2FLAG, REALFLAGX, FFTFLAG, FFT2FLAG, IFFTFLAG, REALFLAGIFFT )        LET AV = 0        IF OPTION$ = "Q" THEN          LET MMENU = 1          EXIT DO        ELSE IF OPTION$ = "L" THEN          CALL BOX12( N, ORG$, ORG2$, X2FLAG, FFT2FLAG, TYPE$, MODE$, PULSESCALE, KILLSWITCHFLAG )          IF ORG$ = "C" THEN            LET CENT1 = 1          ELSE IF ORG$ = "L" THEN            LET CENT1 = 0          END IF          IF ORG2$ = "C" THEN            LET CENT2 = 1          ELSE IF ORG2$ = "L" THEN            LET CENT2 = 0          END IF          LET KILLSWITCHFLAG = 0          CALL TW_WKILL(2)          CALL TW_WSWITCH(1)          CALL TW_EVENT(0, TYPEA$, WINDOW, X1, X2)          CALL TW_WSET_ACTIVE(1)        ELSE          EXIT DO        END IF      LOOP      DO        LET SKIP = 0        LET LOOP1 = 0        LET GOBACK = 0        IF MMENU = 0 THEN          IF OPTION$ = "A" OR OPTION$ = "B" OR OPTION$ = "C" OR OPTION$ = "D" OR OPTION$ = "E" OR OPTION$ = "F" OR OPTION$ = "G" OR OPTION$ = "H" OR OPTION$ = "I" OR OPTION$ = "J" OR OPTION$ = "K" THEN            LET ZAZ = 1   !PRIMARY PLOT          ELSE IF OPTION$ = "A2" OR OPTION$ = "B2" OR OPTION$ = "C2" OR OPTION$ = "D2" OR OPTION$ = "E2" OR OPTION$ = "F2" OR OPTION$ = "G2" OR OPTION$ = "H2" THEN            LET ZAZ = 2   !SECONARY PLOT          END IF          IF OPTION$ = "D" OR OPTION$ = "E" OR OPTION$ = "F" OR OPTION$ = "G" OR OPTION$ = "H" OR OPTION$ = "D2" OR OPTION$ = "E2" OR OPTION$ = "F2" OR OPTION$ = "G2" OR OPTION$ = "H2" THEN            LET FREQPLOT = 1     !PLOT OF A FREQUENCY-DOMAIN ELEMENT          IF CENTFREQ = 1 THEN     !origin in center            LET CENT = 1          ELSE IF CENTFREQ = 0 THEN   !origin at left            LET CENT = 0          END IF          ELSE            LET FREQPLOT = 0     !PLOT OF A TIME-DOMAIN ELEMENT          END IF        END IF        IF LOOP1 = 0 THEN          IF MMENU = 0 THEN            IF FREQPLOT = 1 THEN              IF MODE$ = "DISC" THEN                LET PLOTRANGE = 2  !FOR FREQDOMAIN PLOTS OF DISCRETE FUNCTIONS              ELSE IF MODE$ = "SAMP" THEN                LET PLOTRANGE = 1  !FOR FREQDOMAIN PLOTS OF SAMPLED FUNCTIONS              END IF            ELSE IF FREQPLOT = 0 THEN              IF MODE$ = "DISC" THEN                LET PLOTRANGE = 1  !FOR TIMEDOMAIN PULSE DISCRETE FUNCTIONS              ELSE IF MODE$ = "SAMP" THEN                IF TYPE$ = "PER" OR (TYPE$ = "PUL" AND PULSESCALE = 2) THEN                  LET PLOTRANGE = 2  !FOR TIMEDOMAIN AND (PERIODIC OR REPEATED PULSE) SAMPLED FUNCTIONS                ELSE IF TYPE$ = "PUL" AND PULSESCALE = 1 THEN                  LET PLOTRANGE = 1  !FOR TIMEDOMAIN SINGLE PULSE SAMPLED FUNCTIONS                END IF              END IF            END IF            CALL BOX19( PLOTRANGE, FRAC, N, KILLSWITCHFLAG, SHOWNFLAG )            IF FREQPLOT = 1 AND CENTFREQ = 0 THEN              LET FRAC = 0.5*FRAC            END IF            LET FALLBACK = 0            IF FRAC < 0 THEN              IF SHOWNFLAG = 0 THEN                LET GOBACK = 1                CALL PAINTSTATUS(CONCORFLAG, CENTFREQ, N, MODE$, TYPE$, T, XFLAG, X2FLAG, REALFLAGX, FFTFLAG, FFT2FLAG, SYMMFLAG, IFFTFLAG, REALFLAGIFFT, CONVFLAG, KLEEN$, FREEMEM, HJWFLAG, TAXIS, FAXIS, FILESTR$ )              ELSE IF SHOWNFLAG = 1 THEN                LET FALLBACK = 1              END IF            ELSE              LET NN = 2*INT(FRAC*N/2)   !NN WILL ALWAYS BE EVEN            END IF            IF NN < 2 THEN LET NN = 2          END IF        END IF        IF LOOP1 = 0 AND GOBACK = 0 AND FALLBACK = 0 THEN          IF MMENU = 0 THEN            LET T1POS = 0            LET T1NEG = 0            IF OPTION$ = "I" OR OPTION$ = "J" OR OPTION$ = "K" THEN              IF CONVFLAG = 0 THEN                LET SCC = 1              ELSE IF CONVFLAG = 1 THEN                IF MODE$ = "SAMP" THEN                  LET SCC = T/N                ELSE IF MODE$ = "DISC" THEN                  LET SCC = 1                END IF              END IF              FOR I = 0 TO N - 1                LET TEMP2RE(I) =  SCC*IFFTRE(I)                LET TEMP2IM(I) =  SCC*IFFTIM(I)                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I              LET AV = 0                                            !ELSE PREPARING FOR A SPECTRUM            ELSE IF OPTION$ = "D" OR OPTION$ = "E" OR OPTION$ = "F" OR OPTION$ = "G" OR OPTION$ = "H" OR OPTION$ = "D2" OR OPTION$ = "E2" OR OPTION$ = "F2" OR OPTION$ = "G2" OR OPTION$ = "H2" THEN              IF MODE$ = "DISC" THEN                LET MM = 1                  !SCALED FOR DISCRETE                LET GG = 1              ELSE IF MODE$ = "SAMP" THEN                IF TYPE$ = "PER" THEN                  LET MM = 1/N              !SCALED FOR A COMPLEX FOURIER SERIES                ELSE IF TYPE$ = "PUL" THEN                  IF PULSESCALE = 1 THEN                    LET MM = T/N            !SCALED FOR A SINGLE PULSE                  ELSE IF PULSESCALE = 2 THEN                    LET MM = 2*PI/N         !SCALED FOR AN INFINITE PULSE TRAIN                  END IF                END IF                IF CONVFLAG = 0  THEN                  LET GG = MM                ELSE IF CONVFLAG = 1 THEN  !SQUARE THE FACTOR IF CONVOLUTION HAS BEEN RUN BECAUSE THE SPAECTRA HAVE BEEN MULTIPLIED AND PLACED IN FFT                  LET GG = MM^2                  IF MODE$ = "SAMP" AND TYPE$ = "PER" THEN    !MULTIPLY FFT BY  T  IF CONV AMD PERIODIC                    LET GG = T*GG                  END IF                END IF              END IF              IF ZAZ = 1 THEN          ! FOR PLOTTING A PRIMARY FREQUENCY FUNCTION                FOR I = 0 TO N - 1                  LET TEMP2RE(I) =  GG*FFTRE(I)                  LET TEMP2IM(I) =  GG*FFTIM(I)                  IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )                NEXT I              ELSE IF ZAZ = 2 THEN     ! FOR PLOTTING A SECONDARY FREQUENCY FUNCTION                FOR I = 0 TO N - 1                  LET TEMP2RE(I) =  MM*FFT2RE(I)                  LET TEMP2IM(I) =  MM*FFT2IM(I)                  IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )                NEXT I              END IF            END IF            IF KLEEN$ = "ONE" THEN              ASK MAX CURSOR NUMLINES, NUMCOLS              PRINT TAB(NUMLINES,1);              CALL CLEANUP( N, TEMP2RE(), TEMP2IM() )            END IF            IF OPTION$ = "A" THEN   !PLOTTING XRE              LET CENT = CENT1              FOR I = 0 TO N - 1                LET TEMPRE(I) = XRE(I)                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I            ELSE IF OPTION$ = "A2" THEN   !PLOTTING X2RE              LET CENT = CENT2              FOR I = 0 TO N - 1                LET TEMPRE(I) = X2RE(I)                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I            ELSE IF OPTION$ = "B" THEN    !PLOTTING XIM              LET CENT = CENT1              FOR I = 0 TO N - 1                LET TEMPRE(I) = XIM(I)                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I            ELSE IF OPTION$ = "B2" THEN    !PLOTTING X2IM              LET CENT = CENT2              FOR I = 0 TO N - 1                LET TEMPRE(I) = X2IM(I)                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I            ELSE IF OPTION$ = "C" THEN   !PLOTTING  |X|              LET CENT = CENT1              FOR I = 0 TO N - 1                LET TEMPRE(I) = SQR( XRE(I)^2 + XIM(I)^2 )                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I            ELSE IF OPTION$ = "C2" THEN   !PLOTTING  |X2|              LET CENT = CENT2              FOR I = 0 TO N - 1                LET TEMPRE(I) = SQR( X2RE(I)^2 + X2IM(I)^2 )                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I            ELSE IF OPTION$ = "D" OR OPTION$ = "D2" THEN   !PLOTTING FFTRE OR FFT2RE              FOR I = 0 TO N - 1                LET TEMPRE(I) = TEMP2RE(I)                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I            ELSE IF OPTION$ = "E" OR OPTION$ = "E2" THEN  !PLOTTING FFTIM OR FFT2IM              FOR I = 0 TO N - 1                LET TEMPRE(I) = TEMP2IM(I)                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I              IF SYMMFLAG = 1 THEN                LET TEMPRE(0)   = 0   !ZEROING OUT TEMPRE(0) AND TEMPRE(N/2) FOR                                      !AN ODD PLOT IF FUNCTION IS REAL                IF N/2 = INT(N/2) THEN      ! DO ONLY IF N IS EVEN                  LET TEMPRE(N/2) = 0                END IF              END IF            ELSE IF OPTION$ = "F" OR OPTION$ = "F2" THEN   !PLOTTING  |FFT| OR |FFT2|              FOR I = 0 TO N - 1                LET TEMPRE(I) = SQR( TEMP2RE(I)^2 + TEMP2IM(I)^2 )                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I            ELSE IF OPTION$ = "G" OR OPTION$ = "G2" THEN   !PLOTTING PHASE OF FFT OR OF FFT2              IF SYMMFLAG = 1 THEN                LET LIM = INT(N/2)      ! INT(N/2) IS CENTRE WHEN N IS EVEN              ELSE                      ! AND IT IS FIRST NODE TO LEFT OF CENTRE                LET LIM = N - 1         ! WHEN N IS ODD. CENTRE IS NOT A NODE.              END IF              FOR I = 0 TO LIM                LET XF = TEMP2RE(I)                LET YF = TEMP2IM(I)                CALL ARCTAN( XF, YF, THETA )                LET TEMPRE(I) = THETA                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I              IF SYMMFLAG = 1 THEN                LET TEMPRE(0) = 0   !ZEROING OUT TEMPRE(0) AND TEMP(N/2) FOR                                    !ODD PLOTS IF FUNCTION IS REAL                IF N/2 = INT(N/2) THEN          ! DO ONLY IF N IS EVEN                  LET TEMPRE(N/2) = 0                END IF                FOR I = INT(N/2) + 1 TO N - 1   ! DO FOR N EVEN OR ODD                  LET TEMPRE(I) = -TEMPRE(N - I)                  IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )                NEXT I              END IF            ELSE IF OPTION$ = "H" OR OPTION$ = "H2" THEN    !PLOTTING  |FFT|^2 OR |FFT2|^2              IF MODE$ = "DISC" THEN                LET FACTOR = 1              ELSE IF MODE$ = "SAMP" THEN                IF TYPE$ = "PER" THEN                  LET FACTOR = 1                ELSE IF TYPE$ = "PUL" THEN                  LET FACTOR = 1/(2*PI)                END IF              END IF              FOR I = 0 TO N - 1                LET TEMPRE(I) = FACTOR*(TEMP2RE(I)^2 + TEMP2IM(I)^2)                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I            ELSE IF OPTION$ = "I" THEN   !PLOTTING  IFFTRE              LET CENT = CENT1              FOR I = 0 TO N - 1                LET TEMPRE(I) = TEMP2RE(I)                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I            ELSE IF OPTION$ = "J" THEN   !PLOTTING IFFTIM              LET CENT = CENT1              FOR I = 0 TO N - 1                LET TEMPRE(I) = TEMP2IM(I)                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I            ELSE IF OPTION$ = "K" THEN    !PLOTTING  |IFFT|              LET CENT = CENT1              FOR I = 0 TO N - 1                LET TEMPRE(I) = SQR( TEMP2RE(I)^2 + TEMP2IM(I)^2 )                IF (MOD(I,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(I,1024) = 0 AND N > 2048) THEN CALL WORM( AV )              NEXT I            END IF            !            !NOW DOING THE VERTICAL RANGE            !            CALL MAXMIN( N, NN, TEMPRE(), T1POS, T1NEG, CENT, OPTION$, AV )            IF ABS(T1NEG) < 1E-3 * T1POS THEN              LET T1NEG = 0            ELSE IF T1POS < 1E-3 * ABS(T1NEG) THEN              LET T1POS = 0            END IF            LET NNN = 1.1*NN            IF T1POS = 0 AND T1NEG = 0 THEN              IF SHOWNFLAG = 0 THEN                IF N <= 8192 THEN                  BOX CLEAR 0, 40, 0, 3                ELSE IF N > 8192 THEN                  CLEAR                END IF              ELSE IF SHOWNFLAG = 1 THEN                BOX CLEAR 0, 81, 0, 3              END IF              CALL BOX49  !ALL VALUES OF THAT VARIABLE ARE ZERO...              IF SHOWNFLAG = 0 THEN CALL PAINTSTATUS(CONCORFLAG, CENTFREQ, N, MODE$, TYPE$, T, XFLAG, X2FLAG, REALFLAGX, FFTFLAG, FFT2FLAG, SYMMFLAG, IFFTFLAG, REALFLAGIFFT, CONVFLAG, KLEEN$, FREEMEM, HJWFLAG, TAXIS, FAXIS, FILESTR$ )              LET SKIP = 1              LET OPTION$ = OLDOPTION$            ELSE IF T1NEG = 0 THEN              LET SHOWNFLAG = 1              SET WINDOW -.6*NNN, .6*NNN, -.55*T1POS, 1.35*T1POS            ELSE IF T1POS = 0 THEN              LET SHOWNFLAG = 1              SET WINDOW -.6*NNN, .6*NNN, 1.55*T1NEG, -.325*T1NEG            ELSE IF T1POS <> 0 AND T1NEG <> 0 THEN              LET SHOWNFLAG = 1              LET TEMPSUM = T1POS + ABS(T1NEG)              SET WINDOW -.6*NNN, .6*NNN, T1NEG - 0.55*TEMPSUM, T1POS + 0.35*TEMPSUM            END IF            IF SKIP = 0 THEN              CLEAR              !DRAW THE X-AXIS BARS ON EACH SIDE              PLOT -.522*NNN, 0; -.477*NNN, 0              PLOT  .477*NNN, 0;  .522*NNN, 0              !DRAW THE VERTICAL AXES              !DRAW A DASHED LINE IF TEMPRE(J) < .05 OF VERTICAL RANGE              !OR ELSE JUST A MARK IF TEMPRE(J) >= .05 OF VERTICAL RANGE              IF CENT = 1 THEN !ORIGIN AT CENTER                IF T1NEG = 0 THEN                  IF ABS(TEMPRE(NN/2)) < .01*T1POS THEN                    FOR K = 0 TO 1 STEP .05                      PLOT  NN/2,K*T1POS ;  NN/2,(K+.025)*T1POS                      PLOT -NN/2,K*T1POS ; -NN/2,(K+.025)*T1POS                    NEXT K                  END IF                  IF ABS(TEMPRE(0)) < .01*T1POS THEN                    FOR K = 0 TO 1 STEP .05                      PLOT 0,K*T1POS ; 0,(K+.025)*T1POS                    NEXT K                  END IF                  PLOT  NN/2,-0.1*T1POS ;  NN/2,-0.05*T1POS                  PLOT     0,-0.1*T1POS ;     0,-0.05*T1POS                  PLOT -NN/2,-0.1*T1POS ; -NN/2,-0.05*T1POS                ELSE IF T1POS = 0 THEN                  IF ABS(TEMPRE(NN/2)) < 0.01*ABS(T1NEG) THEN                    FOR K = 1 TO 0 STEP -.05                      PLOT  NN/2,(K-.025)*T1NEG ;  NN/2,(K-.05)*T1NEG                      PLOT -NN/2,(K-.025)*T1NEG ; -NN/2,(K-.05)*T1NEG                    NEXT K                  END IF                  IF ABS(TEMPRE(0)) < 0.01*ABS(T1NEG) THEN                    FOR K = 1 TO 0 STEP -.05                      PLOT 0,(K-.025)*T1NEG ; 0,(K-.05)*T1NEG                    NEXT K                  END IF                  PLOT  NN/2,1.09*T1NEG;  NN/2,1.04*T1NEG                  PLOT -NN/2,1.09*T1NEG; -NN/2,1.04*T1NEG                  PLOT     0,1.09*T1NEG;     0,1.04*T1NEG                ELSE IF T1NEG <> 0 AND T1POS <> 0 THEN                  LET SUM = T1POS - T1NEG                  IF ABS(TEMPRE(NN/2)) < 0.01*SUM THEN                    FOR K = 0 TO 1.05 STEP 0.05                      PLOT  NN/2,(T1NEG + (K+.025)*SUM) ;  NN/2,(T1NEG + (K+.05)*SUM)                      PLOT -NN/2,(T1NEG + (K+.025)*SUM) ; -NN/2,(T1NEG + (K+.05)*SUM)                    NEXT K                  END IF                  IF ABS(TEMPRE(0)) < 0.01*SUM THEN                    FOR K = 0 TO 1.05 STEP 0.05                      PLOT 0,(T1NEG + (K+.025)*SUM) ; 0,(T1NEG + (K+.05)*SUM)                    NEXT K                  END IF                  PLOT  NN/2,(T1NEG - 0.09*SUM);  NN/2,(T1NEG - 0.04*SUM)                  PLOT -NN/2,(T1NEG - 0.09*SUM); -NN/2,(T1NEG - 0.04*SUM)                  PLOT     0,(T1NEG - 0.09*SUM);     0,(T1NEG - 0.04*SUM)                END IF              ELSE IF CENT = 0 THEN !ORIGIN AT LEFT                IF T1NEG = 0 THEN                  IF ABS(TEMPRE(0)) < .01*T1POS THEN                    FOR K = 0 TO 1 STEP .05                      PLOT  NN/2,K*T1POS ;  NN/2,(K+.025)*T1POS                      PLOT -NN/2,K*T1POS ; -NN/2,(K+.025)*T1POS                    NEXT K                  END IF                  IF ABS(TEMPRE(NN/2)) < .01*T1POS THEN                    FOR K = 0 TO 1 STEP .05                      PLOT 0,K*T1POS ; 0,(K+.025)*T1POS                    NEXT K                  END IF                  PLOT  NN/2,-0.1*T1POS ;  NN/2,-0.05*T1POS                  PLOT     0,-0.1*T1POS ;     0,-0.05*T1POS                  PLOT -NN/2,-0.1*T1POS ; -NN/2,-0.05*T1POS                ELSE IF T1POS = 0 THEN                  IF ABS(TEMPRE(0)) < 0.01*ABS(T1NEG) THEN                    FOR K = 1 TO 0 STEP -.05                      PLOT  NN/2,(K-.025)*T1NEG ;  NN/2,(K-.05)*T1NEG                      PLOT -NN/2,(K-.025)*T1NEG ; -NN/2,(K-.05)*T1NEG                    NEXT K                  END IF                  IF ABS(TEMPRE(NN/2)) < 0.01*ABS(T1NEG) THEN                    FOR K = 1 TO 0 STEP -.05                      PLOT 0,(K-.025)*T1NEG ; 0,(K-.05)*T1NEG                    NEXT K                  END IF                  PLOT  NN/2,1.09*T1NEG;  NN/2,1.04*T1NEG                  PLOT -NN/2,1.09*T1NEG; -NN/2,1.04*T1NEG                  PLOT     0,1.09*T1NEG;     0,1.04*T1NEG                ELSE IF T1NEG <> 0 AND T1POS <> 0 THEN                  LET SUM = T1POS - T1NEG                  IF ABS(TEMPRE(0)) < 0.01*SUM THEN                    FOR K = 0 TO 1.05 STEP 0.05                      PLOT  NN/2,(T1NEG + (K+.025)*SUM) ;  NN/2,(T1NEG + (K+.05)*SUM)                      PLOT -NN/2,(T1NEG + (K+.025)*SUM) ; -NN/2,(T1NEG + (K+.05)*SUM)                    NEXT K                  END IF                  IF ABS(TEMPRE(NN/2)) < 0.01*SUM THEN                    FOR K = 0 TO 1.05 STEP 0.05                      PLOT 0,(T1NEG + (K+.025)*SUM) ; 0,(T1NEG + (K+.05)*SUM)                    NEXT K                  END IF                  PLOT  NN/2,(T1NEG - 0.09*SUM);  NN/2,(T1NEG - 0.04*SUM)                  PLOT -NN/2,(T1NEG - 0.09*SUM); -NN/2,(T1NEG - 0.04*SUM)                  PLOT     0,(T1NEG - 0.09*SUM);     0,(T1NEG - 0.04*SUM)                END IF              END IF              !              !THIS IS WHERE THE PLOT TAKES PLACE              !               IF CENT = 1 THEN         !ORIGIN AT CENTER                  IF TYPE$ = "PUL" AND PULSESCALE <> 2 AND FRAC = 1 THEN                    ! SINGLE PULSE                    FOR I = -NN/2 TO NN/2                      PLOT I,0 ; I,TEMPRE(MOD(I,N))                    NEXT I                  ELSE                    ! PERIODIC  OR  REPEATED PULSE OR  FRAC < 1  OR N ODD                    FOR I = -NN/2 TO NN/2                      PLOT I,0 ; I,TEMPRE(MOD(I,N))                    NEXT I                  END IF                ELSE IF CENT = 0 THEN     !ORIGIN AT LEFT                  IF TYPE$ = "PUL" AND PULSESCALE <> 2 AND FRAC = 1 AND N/2 = INT(N/2) THEN                    !SINGLE PULSE AND N EVEN                    FOR I = 0 TO NN                      PLOT I - NN/2, 0 ; I - NN/2, TEMPRE(MOD(I,N))                    NEXT I                  ELSE                    !PERIODIC, OR REPEATED PULSE, OR FRAC < 1, OR N ODD                    FOR I = 0 TO NN                      PLOT I - NN/2, 0 ; I - NN/2, TEMPRE(MOD(I,N))                    NEXT I                  END IF                END IF              !PRINTING THE RANGE VALUES ON THE HORIZONTAL AXIS              LET AA = -0.595*NNN              IF T1NEG = 0 THEN                LET BB = -.1625*T1POS              ELSE IF T1POS = 0 THEN                LET BB = 1.165*T1NEG              ELSE IF T1POS <> 0 AND T1NEG <> 0 THEN                LET BB = T1NEG - 0.157*TEMPSUM              END IF              LET VAL1 = NN/2              IF FREQPLOT = 0 AND (((TAXIS = 0 OR TAXIS = 1) AND MODE$ = "SAMP")  OR  MODE$ = "DISC")  THEN                SET TEXT JUSTIFY "LEFT", "HALF"                PLOT TEXT, AT AA, BB: "k ="                SET TEXT JUSTIFY "CENTER", "HALF"                IF CENT = 1 THEN                  PLOT TEXT, AT -VAL1, BB: STR$(-VAL1 )                  PLOT TEXT, AT     0, BB: "0"                  PLOT TEXT, AT  VAL1, BB: STR$( VAL1 )                ELSE IF CENT = 0 THEN                  PLOT TEXT, AT -VAL1, BB: "0"                  PLOT TEXT, AT     0, BB: STR$(  VAL1 )                  PLOT TEXT, AT  VAL1, BB: STR$(2*VAL1 )                END IF              ELSE IF FREQPLOT = 0 AND (TAXIS = 2 AND MODE$ = "SAMP") THEN                LET VAL2 = T/N                SET TEXT JUSTIFY "LEFT", "HALF"                IF CONCORFLAG = 0 AND (OPTION$ = "I" OR OPTION$ = "J" OR OPTION$ = "K") THEN                   PLOT TEXT, AT AA, BB: "tau ="                ELSE                   PLOT TEXT, AT AA, BB: "t ="                END IF                SET TEXT JUSTIFY "CENTER", "HALF"                IF CENT = 1 THEN                  PLOT TEXT, AT -VAL1, BB: STR$(-VAL2*VAL1 )                  PLOT TEXT, AT     0, BB: "0"                  PLOT TEXT, AT  VAL1, BB: STR$( VAL2*VAL1 )                ELSE IF CENT = 0 THEN                  PLOT TEXT, AT -VAL1, BB: "0"                  PLOT TEXT, AT     0, BB: STR$(   VAL2*VAL1 )                  PLOT TEXT, AT  VAL1, BB: STR$( 2*VAL2*VAL1 )                END IF              ELSE IF FREQPLOT = 1 AND (((FAXIS = 0 OR FAXIS = 1) AND MODE$ = "SAMP") OR MODE$ = "DISC") THEN                SET TEXT JUSTIFY "LEFT", "HALF"                PLOT TEXT, AT AA, BB: "n ="                SET TEXT JUSTIFY "CENTER", "HALF"                IF CENT = 1 THEN                  PLOT TEXT, AT -VAL1, BB: STR$(-VAL1 )                  PLOT TEXT, AT     0, BB: "0"                  PLOT TEXT, AT  VAL1, BB: STR$( VAL1 )                ELSE IF CENT = 0 THEN                  PLOT TEXT, AT -VAL1, BB: "0"                  PLOT TEXT, AT     0, BB: STR$(   VAL1 )                  PLOT TEXT, AT  VAL1, BB: STR$( 2*VAL1 )                END IF              ELSE IF FREQPLOT = 1 AND (FAXIS = 2 AND MODE$ = "SAMP") THEN                LET OMEGAs = 2*PI/T                SET TEXT JUSTIFY "LEFT", "HALF"                PLOT TEXT, AT AA, BB: "w ="                SET TEXT JUSTIFY "CENTER", "HALF"                LET VAL2 = VAL1 * OMEGAs                IF CENT = 1 THEN                  PLOT TEXT, AT -VAL1, BB: STR$(-VAL2 )                  PLOT TEXT, AT     0, BB: "0"                  PLOT TEXT, AT  VAL1, BB: STR$( VAL2 )                ELSE IF CENT = 0 THEN                  PLOT TEXT, AT -VAL1, BB: "0"                  PLOT TEXT, AT     0, BB: STR$(   VAL2 )                  PLOT TEXT, AT  VAL1, BB: STR$( 2*VAL2 )                END IF              END IF              !NOW PUTTING IN THE PRINTED STATEMENTS ON THE PLOT              LET STR1$ = "N = " & STR$(N)              IF MODE$ = "SAMP" THEN                LET STR1$ = STR1$ & "   T = " & STR$(T)                IF FREQPLOT = 1 THEN                  LET OMEGAs = 2*PI/T                  LET STR1$ = STR1$ & "   1/2 = " & STR$(OMEGAs)                ELSE IF FREQPLOT = 0 THEN                  LET TS = T/N                  LET STR1$ = STR1$ & "   Ts = " & STR$(TS)                END IF              END IF              IF MODE$ = "DISC" THEN                LET STR1$ = STR1$ & "   DISCRETE"              ELSE IF MODE$ = "SAMP" THEN                LET STR1$ = STR1$ & "   SAMPLED"                IF TYPE$ = "PER" THEN                  LET STR1$ = STR1$ & " PERIODIC"                ELSE IF TYPE$ = "PUL" THEN                  LET STR1$ = STR1$ & " PULSE"                END IF              END IF              SET WINDOW 1, 80, 1, 30              SET TEXT JUSTIFY "CENTER", "HALF"              PLOT TEXT, AT 40,29 : STR1$              IF INT(FRAC*N/2) <> 0 THEN                LET FRACDISP = 1/((2/N)*INT(FRAC*N/2))                LET SHOWSTARS = 0              ELSE                LET SHOWSTARS = 1              END IF              IF FREQPLOT = 1 AND CENTFREQ = 0 THEN                LET FRACDISP = 0.5*FRACDISP              END IF              IF SHOWSTARS = 0 THEN                LET STR2$ =  "ZOOM = " & STR$(FRACDISP) & "   "              ELSE IF SHOWSTARS = 1 THEN                LET STR2$ =  "ZOOM = *****" & "   "              END IF              LET STR2$ = STR2$ & "MAX POSITIVE = " & STR$(T1POS)              LET STR2$ = STR2$ & "   MAX NEGATIVE = " & STR$(T1NEG)              LET COUNT2 = LEN(STR2$)              IF COUNT2 <= 78 THEN                PLOT TEXT, AT 40,27 : STR2$              ELSE                IF SHOWSTARS = 0 THEN                  LET STR2$ =  "ZOOM = " & STR$(FRACDISP) & "   "                ELSE IF SHOWSTARS = 1 THEN                  LET STR2$ =  "ZOOM = *****" & "   "                END IF                LET STR2$ = STR2$ & "MAX POS = " & STR$(T1POS)                LET STR2$ = STR2$ & "   MAX NEG = " & STR$(T1NEG)                PLOT TEXT, AT 40,27 : STR2$              END IF              CALL BOX66( CARD$, COLOR$, OPTION$, ZAZ, PULSESCALE, MODE$, TYPE$, MMENU, X2FLAG, FFT2FLAG, XFLAG, FFTFLAG, IFFTFLAG, REALFLAGX, REALFLAGIFFT )                        !PUTS THE TITLE UNDER THE PLOT            END IF          END IF        END IF        IF LOOPUP2 = 0 THEN          IF (MMENU = 0 OR GOBACK = 1) AND LOOP1 = 0 THEN            DO              LET OLDOPTION$ = OPTION$              CALL BOX17( OPTION$, MODE$, TYPE$, XFLAG, X2FLAG, REALFLAGX, FFTFLAG, FFT2FLAG, IFFTFLAG, REALFLAGIFFT )              LET AV = 0              IF OPTION$ = "Q" THEN                LET MMENU = 1                EXIT DO              ELSE IF OPTION$ = "L" THEN                CALL BOX12( N, ORG$, ORG2$, X2FLAG, FFT2FLAG, TYPE$, MODE$, PULSESCALE, KILLSWITCHFLAG )                IF ORG$ = "C" THEN                  LET CENT1 = 1                ELSE IF ORG$ = "L" THEN                  LET CENT1 = 0                END IF                IF ORG2$ = "C" THEN                  LET CENT2 = 1                ELSE IF ORG2$ = "L" THEN                  LET CENT2 = 0                END IF                LET OPTION$ = OLDOPTION$                EXIT DO              ELSE                EXIT DO              END IF            LOOP          END IF        END IF      LOOP WHILE MMENU = 0 AND LOOPUP2 = 0    LOOP WHILE LOOPUP2 = 1  USE    LET MESG$ = """" & EXTEXT$ & """"    LET MESSAGE$ = "AN ERROR HAS OCCURRED. THE ERROR MESSAGE READS:"    LET MESSAGE$ = MESSAGE$ & "|" & "|   " & MESG$    CALL BOX40C( MESSAGE$ )  END WHEN  CLEAREND SUB !PLOT!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB WORM( AV )  LET AV = AV + 1  SET WINDOW 0, 81, 0, 31  PLOT TEXT, AT AV, 2 : "="END SUB!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB MAXMIN(N, NN, TEMPRE(), T1POS, T1NEG, CENT, OPTION$, AV )  LET T1POS = 0  LET T1NEG = 0  IF CENT = 1 THEN    FOR J = INT(-NN/2) TO INT(NN/2)      LET I = MOD(J,N)      LET T1POS = MAX( T1POS, TEMPRE(I) )      LET T1NEG = MIN( T1NEG, TEMPRE(I) )      IF (MOD(J,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(J,1024) = 0 AND N > 2048) THEN CALL WORM( AV )    NEXT J  ELSE IF CENT = 0 THEN    FOR J = 0 TO NN      LET I = MOD(J,N)      LET T1POS = MAX( T1POS, TEMPRE(I) )      LET T1NEG = MIN( T1NEG, TEMPRE(I) )      IF (MOD(J,512) = 0 AND N >= 512 AND N <= 2048) OR (MOD(J,1024) = 0 AND N > 2048) THEN CALL WORM( AV )    NEXT J  END IFEND SUB !MAXMIN!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!SUB FINDMULT( MODE$, TYPE$, N, T, MULT )  LET MULT = 1  IF MODE$ = "SAMP" AND TYPE$ = "PER" THEN    LET MULT = 1/N  ELSE IF MODE$ = "SAMP" AND TYPE$ = "PUL" THEN    LET MULT = T/N  END IFEND SUB !FINDMULT!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!