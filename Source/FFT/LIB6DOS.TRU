SUB BOX135(MESG$, R$, MM, VSQ$, A$)

  SOUND 500,.1
  CLEAR

  LET FRAZ1$ = "AN ERROR HAS OCCURRED IN LINE NUMBER " & STR$(MM) & " OF YOUR DATA FILE."
  LET COUNT1 = LEN(FRAZ1$)

  LET FRAZ3$ = """" & R$ & """"
  LET COUNT3 = LEN(FRAZ3$)

  LET FRAZ5$ = MESG$
  LET COUNT5 = LEN(FRAZ5$)

  LET COUNTB = MAX(COUNT1,COUNT3)
  LET COUNTB = MAX(COUNTB,COUNT5)
  LET WID = COUNTB+4
  IF WID >= 78 THEN LET WID = 78

  LET STARTB = 40 - ROUND((COUNTB+6)/2)
  IF STARTB < 1 THEN LET STARTB = 1

  CALL BOXU(4, STARTB, WID, 12)

  LET START1 = 40 - ROUND(COUNT1/2)
  LET FRAZ1$ = FRAZ1$[1:WID]
  PRINT TAB(6,START1); FRAZ1$

  LET FRAZ2$ = "THE LINE WHICH HAS BEEN READ IS:"
  LET COUNT2 = LEN(FRAZ2$)
  LET START2 = 40 - ROUND(COUNT2/2)
  PRINT TAB(8,START2);FRAZ2$

  LET START3 = 40 - ROUND(COUNT3/2)
  LET FRAZ3$ = FRAZ3$[1:WID]
  PRINT TAB(10,START3);FRAZ3$

  LET FRAZ4$ = "THE ERROR DIAGNOSTIC READS:"
  LET COUNT4 = LEN(FRAZ4$)
  LET START4 = 40 - ROUND(COUNT4/2)
  PRINT TAB(12,START4);FRAZ4$
  PRINT TAB(13,STARTB+3);
  FOR K = 1 TO COUNTB
    PRINT "-";
  NEXT K

  LET START5 = 40 - ROUND(COUNT5/2)
  LET FRAZ5$ = FRAZ5$[1:WID]
  PRINT TAB(14,START5);FRAZ5$

  PRINT TAB(15,STARTB+3);
  FOR K = 1 TO COUNTB
    PRINT "-";
  NEXT K

  LET FRAZ6$ = "ณ DISREGARD THIS LINE ... D ณ QUIT ... Q ณ  ?  "

  DO
    IF PRL = 1 THEN SOUND 500,.1

    CALL APROMPT( 19, 18, A$, FRAZ6$, VSQ$ )

    IF VSQ$ = "D" OR VSQ$ = "Q" THEN LET SXP = 1
    LET PRL = 1
  LOOP UNTIL SXP = 1

END SUB !BOX135
