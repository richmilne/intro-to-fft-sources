!SYSTEM FOR OPERATING PROGRAMS PLOT1 THRU PLOT8.!N MORRISON, DECEMBER 1993, CAPE TOWN, SOUTH AFRICA.  LIBRARY "PLOTSUB1.TRU*"  LIBRARY "PLOTSUB2.TRU*"  LIBRARY "PLOTSUB3.TRU*"  LIBRARY "PLOTSUB4.TRU*"  LIBRARY "PLOTSDOS.TRU*"  LIBRARY "StrLib*", "TabLib*", "TrueWindows-buttons*", "System*", "MacTools*"  LIBRARY ":LIBINFO.TRU*"  DECLARE DEF EVAL  LET COLOR$ = "BLACK/WHITE"  CALL STARTUP( WINDOW1 )  DO    LET SHOAD = 1    DO      LET MMENU = 0      IF SHOAD = 1 THEN        CALL ADV           !ADVERTISEMENT FRAME        LET SHOAD = 0      END IF      CALL PAINTMAINMENU( OPTION$ )      IF OPTION$ = "A" THEN CALL PLOT2( COLOR$ )      IF OPTION$ = "B" THEN CALL PLOT3( COLOR$ )      IF OPTION$ = "C" THEN CALL PLOT4( COLOR$ )      IF OPTION$ = "D" THEN CALL PLOT5( COLOR$ )      IF OPTION$ = "E" THEN CALL PLOT6( COLOR$ )      IF OPTION$ = "F" THEN CALL PLOT7( COLOR$ )      IF OPTION$ = "G" THEN CALL PLOT1( COLOR$ )      IF OPTION$ = "H" THEN CALL PLOT8( COLOR$, WINDOW1 )    LOOP UNTIL OPTION$ = "Q"    CALL BOX107( WXY$ )  LOOP UNTIL WXY$ = "Y"  CALL SHUTDOWNEND!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!