SUB ARCTAN( XF, YF, THETA )

  IF XF <> 0 AND YF <> 0 THEN
    IF XF > 0 AND YF > 0 THEN
      LET THETA = ATN(YF/XF)
    ELSE IF XF > 0 AND YF < 0 THEN
      LET THETA = ATN(YF/XF)
    ELSE IF XF < 0 AND YF > 0 THEN
      LET THETA = ATN(YF/XF) + PI
    ELSE IF XF < 0 AND YF < 0 THEN
      LET THETA = ATN(YF/XF) - PI
    END IF
  ELSE IF XF <> 0 AND YF = 0 THEN
    IF XF > 0 THEN
      LET THETA = 0
    ELSE IF XF < 0  THEN
      LET THETA = PI
    END IF
  ELSE IF XF = 0 AND YF <> 0 THEN
    IF YF > 0 THEN
      LET THETA = PI/2
    ELSE IF YF < 0 THEN
      LET THETA = -PI/2
    END IF
  ELSE IF XF = 0 AND YF = 0 THEN
    LET THETA = 0
  END IF

END SUB !ARCTAN
