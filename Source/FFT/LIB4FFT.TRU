SUB MENU3( A$ )

  CALL BOX22( TYPE$, CR$, A$ )

  IF CR$ = "C" THEN            !SHOW FOURIER SERIES COMPLEX FORM
    LET DISP = 1
  ELSE IF CR$ = "R" THEN       !SHOW FOURIER SERIES REAL FORM
    LET DISP = 2
  ELSE IF CR$ = "Q" THEN       !MAIN MENU
    LET MMENU = 1
  END IF
  CLEAR

END SUB !MENU3
