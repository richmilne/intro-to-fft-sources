SUB MENU4( CONVFLAG, A$ )

  IF CONVFLAG = 0 THEN

    CALL BOX22( TYPE$, CS$, A$ )

    IF CS$ = "S" THEN            !SHOW SINGLE PULSE FORM (COMPLEX)
      LET DISP = 3
    ELSE IF CS$ = "I" THEN       !SHOW INFINITE PULSE TRAIN FORM (MULT BY 2ã/N)
      LET DISP = 4
    ELSE IF CS$ = "Q" THEN       !MAIN MENU
      LET MMENU = 1
    END IF
    CLEAR

  ELSE IF CONVFLAG = 1 THEN
    LET DISP = 3
  END IF

END SUB !MENU4
